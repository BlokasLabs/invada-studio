@prefix lv2:  <http://lv2plug.in/ns/lv2core#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<http://invadarecords.com/plugins/inv_input> a lv2:Plugin ;
    a lv2:UtilityPlugin ;
    doap:name "Invada Input Module" ;
    doap:maintainer [
	foaf:name "Fraser Stuart";
	foaf:homepage <http://www.invadarecords.com/Downloads.php?ID=---TBA---> ;
	foaf:mbox <mailto:fraser@arkhostings.com> ;
    ] ;
    doap:licence <http://usefulinc.com/doap/licenses/gpl> ;
    lv2:optionalFeature lv2:hardRtCapable ;

    lv2:port [
	a lv2:InputPort ;
	a lv2:ControlPort ;
	lv2:index 0 ;
	lv2:symbol "phaseL" ;
	lv2:name "Ø (L)" ;
	lv2:toggled ;
	lv2:default 0.0 ;
    ] , [
	a lv2:InputPort ;
	a lv2:ControlPort ;
	lv2:index 1 ;
	lv2:symbol "phaseR" ;
	lv2:name "Ø (R)" ;
	lv2:toggled ;
	lv2:default 0.0 ;
    ] , [
	a lv2:InputPort ;
	a lv2:ControlPort ;
	lv2:index 2 ;
	lv2:symbol "gain" ;
	lv2:name "Gain" ;
	lv2:default 0.0 ;
	lv2:minimum -24.0 ;
	lv2:maximum 24.0 ;
	lv2:scalePoint [
	    rdfs:label "-24dB" ;
	    rdf:value -24.0 ;
	] , [
	    rdfs:label "-18dB" ;
	    rdf:value -18.0 ;
	] , [
	    rdfs:label "-12dB" ;
	    rdf:value -12.0 ;
	] , [
	    rdfs:label "-6dB" ;
	    rdf:value -6.0 ;
	] , [
	    rdfs:label "0dB" ;
	    rdf:value 0.0 ;
	] , [
	    rdfs:label "+6dB" ;
	    rdf:value 6.0 ;
	] , [
	    rdfs:label "+12dB" ;
	    rdf:value 12.0 ;
	] , [
	    rdfs:label "+18dB" ;
	    rdf:value 18.0 ;
	] , [
	    rdfs:label "+24dB" ;
	    rdf:value 24.0 ;
	]
    ] , [
	a lv2:InputPort ;
	a lv2:ControlPort ;
	lv2:index 3 ;
	lv2:symbol "pan" ;
	lv2:name "Pan" ;
	lv2:default 0.0 ;
	lv2:minimum -1.0 ;
	lv2:maximum 1.0 ;
	lv2:scalePoint [
	    rdfs:label "Left" ;
	    rdf:value -1.0 ;
	] , [
	    rdfs:label "Center" ;
	    rdf:value 0.0 ;
	] , [
	    rdfs:label "Right" ;
	    rdf:value 1.0 ;
	]
    ] , [
	a lv2:InputPort ;
	a lv2:ControlPort ;
	lv2:index 4 ;
	lv2:symbol "width" ;
	lv2:name "Stereo Width" ;
	lv2:default 0.0 ;
	lv2:minimum -1.0 ;
	lv2:maximum 1.0 ;
	lv2:scalePoint [
	    rdfs:label "Mono" ;
	    rdf:value -1.0 ;
	] , [
	    rdfs:label "Normal" ;
	    rdf:value 0.0 ;
	] , [
	    rdfs:label "Phase" ;
	    rdf:value 1.0 ;
	]
    ] , [
	a lv2:InputPort ;
	a lv2:ControlPort ;
	lv2:index 5 ;
	lv2:symbol "noClip" ;
	lv2:name "Soft Clip" ;
	lv2:toggled ;
	lv2:default 0.0 ;
    ] , [
	a lv2:AudioPort ;
	a lv2:InputPort ;
	lv2:index 6 ;
	lv2:symbol "inL" ;
	lv2:name "L In" ;
    ] , [
	a lv2:AudioPort ;
	a lv2:InputPort ;
	lv2:index 7 ;
	lv2:symbol "inR" ;
	lv2:name "R In" ;
    ] , [
	a lv2:AudioPort ;
	a lv2:OutputPort ;
	lv2:index 8 ;
	lv2:symbol "outL" ;
	lv2:name "L Out" ;
   ] , [
	a lv2:AudioPort ;
	a lv2:OutputPort ;
	lv2:index 9 ;
	lv2:symbol "outR" ;
	lv2:name "R Out" ;
    ]
.

	
