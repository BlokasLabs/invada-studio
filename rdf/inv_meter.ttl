@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix units: <http://lv2plug.in/ns/extension/units#> .
@prefix uiext: <http://lv2plug.in/ns/extensions/ui#> .


<http://invadarecords.com/plugins/lv2/meter/gui>
    a uiext:GtkUI;
    uiext:binary <inv_meter_gui.so>;
    uiext:requiredFeature uiext:makeResident ;

    uiext:portNotification [ 
	uiext:plugin <http://invadarecords.com/plugins/lv2/meter>  ;
        uiext:portIndex 5 ;
    ],[ 
	uiext:plugin <http://invadarecords.com/plugins/lv2/meter>  ;
        uiext:portIndex 6 ;
    ],[ 
	uiext:plugin <http://invadarecords.com/plugins/lv2/meter>  ;
        uiext:portIndex 7 ;
    ],[ 
	uiext:plugin <http://invadarecords.com/plugins/lv2/meter>  ;
        uiext:portIndex 8 ;
    ],[ 
	uiext:plugin <http://invadarecords.com/plugins/lv2/meter>  ;
        uiext:portIndex 9 ;
    ] .

<http://invadarecords.com/plugins/lv2/meter> 
    a lv2:Plugin, lv2:UtilityPlugin ;
    doap:name "Invada Meters" ;
    doap:license <http://usefulinc.com/doap/licenses/gpl> ;
    doap:maintainer [
	foaf:name "Invada";
	foaf:homepage <http://www.invadarecords.com/Downloads.php?ID=---TBA---> ;
	foaf:mbox <mailto:fraser@arkhostings.com> ;
    ] ;
    lv2:optionalFeature lv2:hardRtCapable ;
    uiext:ui <http://invadarecords.com/plugins/lv2/meter/gui>;

    lv2:port [
	a lv2:InputPort, lv2:ControlPort ;
	lv2:index 0 ;
	lv2:symbol "bypass" ;
	lv2:name "Bypass" ;
	lv2:portProperty :toggled ;
	lv2:default 0.0 ;
    ] , [
	a lv2:InputPort, lv2:AudioPort ;
	lv2:index 1 ;
	lv2:symbol "inL" ;
	lv2:name "L In" ;
    ] , [
	a lv2:InputPort, lv2:AudioPort ;
	lv2:index 2 ;
	lv2:symbol "inR" ;
	lv2:name "R In" ;
    ] , [
	a lv2:OutputPort, lv2:AudioPort ;
	lv2:index 3 ;
	lv2:symbol "outL" ;
	lv2:name "L Out" ;
   ] , [
	a lv2:OutputPort, lv2:AudioPort ;
	lv2:index 4 ;
	lv2:symbol "outR" ;
	lv2:name "R Out" ;
   ] , [
	a lv2:OutputPort, lv2:ControlPort ;
	lv2:index 5 ;
	lv2:symbol "meterPeakL" ;
	lv2:name "L In Peak" ;
	lv2:minimum -60.0 ;
	lv2:maximum 6.0 ;
	units:unit :db ;
    ] , [
	a lv2:OutputPort, lv2:ControlPort ;
	lv2:index 6 ;
	lv2:symbol "meterPeakR" ;
	lv2:name "R In Peak" ;
	lv2:minimum -60.0 ;
	lv2:maximum 6.0 ;
	units:unit :db ;
    ] , [
	a lv2:OutputPort, lv2:ControlPort ;
	lv2:index 7 ;
	lv2:symbol "meterVuL" ;
	lv2:name "L In VU" ;
	lv2:minimum -60.0 ;
	lv2:maximum 6.0 ;
	units:unit :db ;
    ] , [
	a lv2:OutputPort, lv2:ControlPort ;
	lv2:index 8 ;
	lv2:symbol "meterVuR" ;
	lv2:name "R In VU" ;
	lv2:minimum -60.0 ;
	lv2:maximum 6.0 ;
	units:unit :db ;
   ] , [
	a lv2:OutputPort, lv2:ControlPort ;
	lv2:index 9 ;
	lv2:symbol "meterPhase" ;
	lv2:name "Phase Meter" ;
	lv2:minimum -60.0 ;
	lv2:maximum 6.0 ;
   ] .

	
